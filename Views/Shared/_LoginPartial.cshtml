@using Microsoft.AspNetCore.Identity
@using Cribbly.Models

@inject SignInManager<Player> SignInManager
@inject UserManager<Player> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li>
        <form id="logoutForm" class="form-inline navbar-brand" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit">Logout</button>
        </form>
    </li>
}
else
{
}
