@using Microsoft.AspNetCore.Identity
@using Cribbly.Models

@inject SignInManager<Player> SignInManager
@inject UserManager<Player> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li>
        <a id="manage" class="navbar-brand" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">My Account</a>
    </li>
    <li>
        <form id="logoutForm" class="form-inline navbar-brand" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit">Logout</button>
        </form>
    </li>
}
else
{
    <li>
        <a class="navbar-brand" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li>
        <a class="navbar-brand" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
