@using Cribbly.Data;
@model Cribbly.Models.Division;
@inject ApplicationDbContext _context;
@{
    ViewData["Title"] = "EditDivision";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditDivision</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDivision">
            <div class="form-group">
                <label asp-for="DivName" class="control-label"></label>
                <input asp-for="DivName" class="form-control" />
                <span asp-validation-for="DivName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

