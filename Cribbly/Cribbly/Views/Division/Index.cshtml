@model Cribbly.Models.ViewModels.DivisionView

@section cssLink {
    <link rel="stylesheet" href="~/css/largeTables.css" type="text/css" />
}

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Divisions</h2>

<table class="table">
    <thead>
        <tr>
            <th>Division Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model._divisions)
        {
            <tr>
                <td><h5>@Html.DisplayFor(modelItem => item.DivName)</h5></td>
                <td>
                    <h5>Members</h5>
                </td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a asp-action="EditDivision/@item.Id">Edit</a>
                    </td>
                }
            </tr>
            @for (int i = 0; i < Model._standings.Where(m => m.Division == item.DivName).ToList().Count; i++)
            {
                <tr class="divTeams">
                    <td></td>
                    <td>@Model._standings.Where(m => m.Division == item.DivName).ToList()[i].TeamName</td>
                </tr>
            }
        }
    </tbody>
</table>
