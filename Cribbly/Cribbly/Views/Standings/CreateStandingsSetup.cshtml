@model List<Cribbly.Models.ApplicationUser>
@{
    ViewData["Title"] = "CreateStandingsSetup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Standings: Setup</h2>

<p>The following @Model.Count players do not yet have teams and will be paired up:</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Teamless Users
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
            </tr>
        }
    </tbody>
</table>

<form asp-action="ConfirmCreateStandings" method="POST">
    <button type="submit" class="btn">Pair Players</button>
</form>
