@model IEnumerable<Cribbly.Models.Gameplay.PlayInGame>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(modelItem => modelItem.Team1TotalScore)
            </th>
            <th>
                @Html.DisplayNameFor(modelItem => modelItem.Team2TotalScore)
            </th>
            <th>
                @Html.DisplayNameFor(modelItem => modelItem.WinningTeamId)
            </th>
            <th>
                @Html.DisplayNameFor(modelItem => modelItem.ScoreDifference)
            </th>
            <th>
                @Html.DisplayNameFor(modelItem => modelItem.GameNumber)
            </th>
            <th>
                @Html.DisplayNameFor(modelItem => modelItem.Team1Name)
            </th>
            <th>
                @Html.DisplayNameFor(modelItem => modelItem.Team2Name)
            </th>
            <th>
                @Html.DisplayNameFor(modelItem => modelItem.WinningTeamName)
            </th>
            <th>
                @Html.DisplayNameFor(modelItem => modelItem.Division)
            </th>
            <th>
                @Html.DisplayNameFor(modelItem => modelItem.LastUpdated)
            </th>
            <th>
                @Html.DisplayNameFor(modelItem => modelItem.UpdatedBy)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Team1TotalScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team2TotalScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WinningTeamId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScoreDifference)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team1Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team2Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WinningTeamName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Division)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedBy)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id]">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
