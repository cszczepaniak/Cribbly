                <th>@Html.DisplayNameFor(model => model._3waygames[0].GameNumber)</th>
                <th>@Html.DisplayNameFor(model => model._3waygames[0].Team1Name)</th>
                <th>@Html.DisplayNameFor(model => model._3waygames[0].Team2Name)</th>
                <th>@Html.DisplayNameFor(model => model._3waygames[0].Team3Name)</th>
                <th>@Html.DisplayNameFor(model => model._3waygames[0].WinningTeamName)</th>
                <th>@Html.DisplayNameFor(model => model._3waygames[0].Division)</th>
                <th>@Html.DisplayNameFor(model => model._3waygames[0].LastUpdated)</th>
                <th>@Html.DisplayNameFor(model => model._3waygames[0].UpdatedBy)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model._3waygames)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Team1TotalScore)</td>
