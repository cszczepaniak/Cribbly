@model Dictionary<int, Cribbly.Models.Gameplay.BracketTeam[]>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/bracket.css" type="text/css" />
<h1>Bracket</h1>
@{
    if (Model != null) 
    {
        <div class="bracket-container">
            @{
                foreach(var kv in Model) 
                {
                    <div class="round-container">
                        <h4>Round @kv.Key</h4>
                        @{
                            for(int i = 0; i < kv.Value.Length-1; i+=2) {
                                var t1 = kv.Value[i];
                                var t2 = kv.Value[i+1];
                                <div class="game-container">
                                    <div class="game">
                                        <a class="team team-admin" href="@Url.Action("Advance", "Bracket", new{ round = kv.Key, seed = t1.Seed })">
                                            @{
                                                var t1Str = t1.IsEliminated() ? "ELIMINATED" : t1.TeamName;
                                            }
                                            <div>@t1Str</div>
                                        </a>
                                        <a class="team team-admin" href="@Url.Action("Advance", "Bracket", new{ round = kv.Key, seed = t2.Seed })">
                                            @{
                                                var t2Str = t2.IsEliminated() ? "ELIMINATED" : t2.TeamName;
                                            }
                                            <div>@t2Str</div>
                                        </a>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                }
            }
        </div>
    } else {
        <p>NOT SEEDED YET</p>
    }
}